@model BlogDapper.Models.Categoria

@{
	ViewData["Title"] = "Crear Categoria";
}


<h1>Crear Categoría</h1>
<hr />
<div class="row p-4">
	<div class="col-4 offset-4">
		<form asp-action="Crear" >
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="nombre" class="contro-label"></label>
				<input asp-for="nombre" class="form-control" placeholder="Ingresa el nombre de la categoría" />
				<span asp-validation-for="nombre" class="text-danger"></span>
			</div>
			<div class="form-group row mt-4">
				<div class="col-6">
					<input type="submit" value="Crear Categoría" class="btn btn-primary form-control" />
				</div>
				<div class="col-6">
					<a asp-action="Index" class="btn btn-warning form-control">Volver a Lista</a>
				</div>
			</div>
		</form>
	</div>
</div>